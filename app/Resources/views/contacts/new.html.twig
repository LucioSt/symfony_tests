{%  extends 'base.html.twig' %}

{% block title %} Contacts {% endblock %}

{%  block body %}



    <div id="main" class="container-fluid">
        <h3 class="page-header">New Contact</h3>
    </div>


    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}



    <form class="form-horizontal">
        <div class="form-group">
            <label for="inputEmail" class="control-label col-xs-2">Name:</label>
            <div class="col-xs-6">
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}} ) }}
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="control-label col-xs-2">Address</label>
            <div class="col-xs-6">
                {{ form_widget(form.address, {'attr': {'class': 'form-control'}} ) }}
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail" class="control-label col-xs-2">Country:</label>
            <div class="col-xs-6">
                {{ form_widget(form.country, {'attr': {'class': 'form-control'}} ) }}
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="control-label col-xs-2">City</label>
            <div class="col-xs-6">
                {{ form_widget(form.city, {'attr': {'class': 'form-control'}} ) }}
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="control-label col-xs-2">Category</label>
            <div class="col-xs-6">
                {{ form_widget(form.category, {'attr': {'class': 'form-control'}} ) }}
            </div>
        </div>

        <div class="form-group">
            <label for="inputPassword" class="control-label col-xs-2">Category</label>
            <div class="col-xs-6">
                {{ form_widget(form.datetime, {'attr': {'class': 'form-control'}} ) }}
            </div>
        </div>

        {{ form_widget(form) }}

        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-6">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a href="/contacts/index" class="btn btn-default">Cancelar</a>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/contacts/index" class="btn btn-default ">Back to the list</a>
            </div>
        </div>
    </form>


    {{ form_end(form) }}



{% endblock %}
